conky.config = {
  font = 'Hack:size=8',
  use_xft = true,
  update_interval = 1,
  total_run_times = 0,
  own_window = true,
  own_window_transparent = false,
  own_window_type = 'dock',
  own_window_hints = 'undecorated, skip_taskbar, skip_pager, below',
  double_buffer = false,
  draw_shades = false,
  draw_outline = false,
  draw_borders = true,
  stippled_borders = 0,
  default_color = '303030',
  own_window_colour = '191919',
  alignment = 'top_left',
  gap_x = 1755,
  gap_y = 20,
  no_buffers = true,
  uppercase = false,
  cpu_avg_samples = 2,
  net_avg_samples = 2,
  override_utf8_locale = true,
  color0 = '#65a0db',
  color1 = '#5b5b5b',
  color2 = '#f7f2f2',
  color3 = '#252018',
  color4 = '#f7f2f2',
}

conky.text = [[
${color 65a0db}Kernel: ${color f7f2f2}${alignr}${kernel}
${color 65a0db}UpTime:${color f7f2f2}${alignr}${uptime}
${color 65a0db}FileSystem:${color f7f2f2}${alignr}${fs_type}
${color 65a0db}Processes: ${color f7f2f2}$alignr ${execi 1000 ps aux | wc -l}

${color4}${font hack:bold:size=10}SYSTEM
${font hack:bold:size=8}
${color0}cpu 1 ${color2}[${freq 1} mhz]
${color0}cpu 2 ${color2}[${freq 2} mhz]
${color0}cpu 3 ${color2}[${freq 3} mhz]
${color0}cpu 4 ${color2}[${freq 4} mhz]
${color0}cpu 5 ${color2}[${freq 5} mhz]
${color0}cpu 6 ${color2}[${freq 6} mhz]
${color0}cpu 7 ${color2}[${freq 7} mhz]
${color0}cpu 8 ${color2}[${freq 8} mhz]
${color0}cpu 9 ${color2}[${freq 9} mhz]


${color0}${font Hack:size=10}MEMORY ${color1}
${color0}${font Hack:size=8}RAM ${color4}$alignc $mem/$memmax $alignr $memperc%
${color4}${membar}${color2}


${color0}${font hack:size=8}Temperature:${alignr}${color4}${execi 60 nvidia-smi --query-gpu=temperature.gpu --format=csv,noheader}C
${color0}${font hack:size=8}Utilization:${alignr}${color4}${execi 60 nvidia-smi --query-gpu=utilization.gpu --format=csv,noheader}

${color4}${font Hack:bold:size=10}DISK USAGE 
${font Hack:normal:size=8}${fs_used /}/${fs_size /} $alignr ${fs_used_perc /}%
${color4}${fs_bar /}{color2}

${color4}${font Hack:bold:size=10}PROCESSES 
${font sans-serif:normal:size=8}Name $alignr PID   CPU%   
${top name 1} $alignr ${top pid 1} ${top cpu 1}%
${top name 2} $alignr ${top pid 2} ${top cpu 2}%
${top name 3} $alignr ${top pid 3} ${top cpu 3}%
${top name 4} $alignr ${top pid 4} ${top cpu 4}%
${top name 5} $alignr ${top pid 5} ${top cpu 5}%
${top name 6} $alignr ${top pid 6} ${top cpu 6}%
${top name 7} $alignr ${top pid 7} ${top cpu 7}%
${top name 8} $alignr ${top pid 8} ${top cpu 8}%
${top name 9} $alignr ${top pid 9} ${top cpu 9}%
${top name 10} $alignr ${top pid 10} ${top cpu 10}%
]]
