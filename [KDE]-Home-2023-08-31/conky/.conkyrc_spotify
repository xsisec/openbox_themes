conky.config = {

    no_buffers = true,
    use_xft = true,
    cpu_avg_samples = 2,
    update_interval = 1,
    font = 'anorexia:size=6',
    alignment = 'top_left',
    gap_x = 3040,
    gap_y = 920,
    default_color='262524',
    own_window = true,
    own_window_colour='303030',
    own_window_type='desktop',    -- No borders, always visible on the desktop,
    own_window_transparent = false,
    own_window_hints = 'undecorated,below,sticky,skip_pager',
    double_buffer = true,
    draw_shades = false,
    draw_outline = false,
    draw_borders = true,
    stippled_borders =0,
    minimum_width=250,            -- This means the display won't wriggle around if things
    draw_graph_borders = false,


};

conky.text = [[
# --- Get Spotify Cover ---
${if_running spotify}${exec ~/.config/conky/conky-spotify/scripts/cover.sh}${endif}
${image ~/.config/conky/conky-spotify/current/current.jpg -p 0,0 -s 80x80}
# --- Show now playing information ---
${goto 100}${color 9ACD32}Artist:
${goto 102}${color a4a4a4}${font anorexia:size=10}${exec ~/.config/conky/conky-spotify/scripts/artist.sh}
${goto 100}${color 9ACD32}Album:
${goto 102}${color a4a4a4}${font anorexia:size=10}${exec ~/.config/conky/conky-spotify/scripts/album.sh}
${goto 100}${color 9ACD32}Title:
${goto 102}${color a4a4a4}${font anorexia:size=10}${exec ~/.config/conky/conky-spotify/scripts/title.sh}

]];
